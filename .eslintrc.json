{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warn"
  },
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["backend/**"],
      "extends": ["eslint:recommended", "prettier", "plugin:node/recommended"],
      "env": {
        "es6": true
      },
      "parserOptions": {
        "ecmaVersion": 2020
      }
    },
    {
      "files": ["frontend/**"],
      "extends": [
        "plugin:vue/vue3-recommended",
        "eslint:recommended",
        "prettier",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "prettier/prettier": "warn"
      }
    }
  ]
}
